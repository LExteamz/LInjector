<UserControl x:Class="LInjector.Pages.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:LInjector.Pages"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:LInjector.Pages"
             mc:Ignorable="d"
             Loaded="UserControl_Loaded"
             d:DesignHeight="400" d:DesignWidth="600">

    <Border ClipToBounds="False">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="0" Opacity="1" x:Name="HarderBetterFasterStronger" Direction="0" RenderingBias="Quality"/>
        </Border.Effect>
        <Grid ClipToBounds="True" Background="Transparent" MouseDown="DragWnd">
            <Grid.RowDefinitions>
                <RowDefinition Height="35" MinHeight="35" MaxHeight="35"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" MouseDown="DragWnd" BorderBrush="{DynamicResource SecondaryText}" BorderThickness="0 0 0 0.1">
                <Border Padding="10 0 0 0" MouseDown="DragWnd" Background="{DynamicResource PrimaryColor}">
                    <Grid Margin="0" MouseDown="DragWnd">
                        <Grid HorizontalAlignment="Left" MouseDown="DragWnd">
                            <Image Source="pack://application:,,,/LInjector;component/Resources/LInjectorr.png" MaxHeight="25" VerticalAlignment="Center" HorizontalAlignment="Left" MouseDown="DragWnd"/>
                        </Grid>
                        <Grid>
                            <StackPanel Orientation="Horizontal" Margin="30,0,0,0" MouseDown="DragWnd" x:Name="ContextMenuHolder">
                                <StackPanel.Resources>
                                    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}">
                                        <Setter Property="Padding" Value="2.5"/>
                                        <Setter Property="FontSize" Value="11"/>
                                        <Setter Property="Foreground" Value="{DynamicResource SecondaryText}"/>
                                        <Setter Property="Height" Value="Auto"/>
                                        <Setter Property="HorizontalAlignment" Value="Left"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                    </Style>
                                </StackPanel.Resources>
                                <Label Content="LInjector" VerticalAlignment="Center" FontFamily="Microsoft YaHei UI" FontSize="14" Loaded="TitleBarLabel_Loaded" x:Name="TitleBarLabel" Foreground="{DynamicResource Text}"/>
                            </StackPanel>
                        </Grid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <StackPanel.Resources>
                                <Style TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}">
                                    <Setter Property="Margin" Value="0"/>
                                    <Setter Property="FontFamily" Value="Segoe Fluent Icons"/>
                                    <Setter Property="FontSize" Value="10"/>
                                    <Setter Property="Foreground" Value="{DynamicResource Text}"/>
                                    <Setter Property="Width" Value="Auto"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="VerticalAlignment" Value="Stretch"/>
                                    <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="0"/>
                                    <EventSetter Event="Click" Handler="ContextMenuClick"/>
                                </Style>
                            </StackPanel.Resources>

                            <Button Content="&#xE921;" x:Name="Minimise"/>
                            <Button Content="&#xE923;" x:Name="Restore" IsEnabled="False"/>
                            <Button Content="&#xE8BB;" x:Name="Close"/>

                        </StackPanel>
                    </Grid>
                </Border>
            </Border>
            <Border Grid.Row="1" Background="{DynamicResource SecondaryColor}">
                <Grid x:Name="trakas_hdspm">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="45"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0" Width="45" VerticalAlignment="Stretch">
                        <Grid>
                            <Grid.Resources>
                                <Style TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}">
                                    <Setter Property="Margin" Value="0 5"/>
                                    <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
                                    <Setter Property="FontSize" Value="9"/>
                                    <Setter Property="Padding" Value="5"/>
                                    <Setter Property="Height" Value="35"/>
                                    <Setter Property="Width" Value="35"/>
                                    <Setter Property="Foreground" Value="{DynamicResource Text}"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Opacity" Value="0.75"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="0"/>
                                    <Setter Property="materialDesign:RippleAssist.IsDisabled" Value="True"/>
                                    <EventSetter Event="Click" Handler="NavigationGridClick"/>
                                </Style>
                            </Grid.Resources>

                            <Border BorderBrush="{DynamicResource SecondaryText}" BorderThickness="0 0 0.1 0" x:Name="NavigationIndexers">
                                <Grid>
                                    <Grid VerticalAlignment="Top">
                                        <Button x:Name="Editor" BorderBrush="{DynamicResource SecondaryText}">
                                            <Button.Content>
                                                <Label Content="&#xE7C3;" FontFamily="Segoe Fluent Icons" FontSize="20" Padding="0" Foreground="{DynamicResource Text}"/>
                                            </Button.Content>
                                        </Button>
                                    </Grid>
                                    <Grid VerticalAlignment="Bottom">
                                        <Button x:Name="Settings" VerticalAlignment="Bottom" BorderBrush="{DynamicResource SecondaryText}">
                                            <Button.Content>
                                                <Label Content="&#xE713;" FontFamily="Segoe Fluent Icons" FontSize="20" Padding="0" Foreground="{DynamicResource Text}"/>
                                            </Button.Content>
                                        </Button>
                                    </Grid>
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>
                    
                    <!-- //   SETTINGS GRID   // -->
                    <Grid Grid.Column="1" x:Name="Section_Settings" Visibility="Collapsed">
                        <TabControl>
                            <TabControl.ItemContainerStyle>
                                <Style TargetType="TabItem" BasedOn="{StaticResource {x:Type TabItem}}">
                                    <Setter Property="HeaderTemplate">
                                        <Setter.Value>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding}" Foreground="{DynamicResource Text}" />
                                            </DataTemplate>
                                        </Setter.Value>
                                    </Setter>

                                    <Setter Property="materialDesign:ColorZoneAssist.Background" Value="Transparent"/>
                                    <Setter Property="materialDesign:ColorZoneAssist.Mode" Value="Custom"/>
                                    <Setter Property="Margin" Value="5"/>
                                    <Setter Property="materialDesign:RippleAssist.IsDisabled" Value="True"/>

                                </Style>

                            </TabControl.ItemContainerStyle>

                            <TabItem Header="Settings">
                                <ScrollViewer VerticalScrollBarVisibility="Auto" CanContentScroll="True" Margin="0 10">
                                    <StackPanel x:Name="SettingsItemsHolder">
                                        <StackPanel.Resources>
                                            <Style TargetType="Grid">
                                                <Setter Property="Margin" Value="10 0"/>
                                            </Style>
                                            <Style TargetType="Label">
                                                <Setter Property="Foreground" Value="{DynamicResource Text}"/>
                                                <Setter Property="HorizontalAlignment" Value="Left"/>
                                            </Style>
                                        </StackPanel.Resources>


                                    </StackPanel>
                                </ScrollViewer>
                            </TabItem>
                            <TabItem Header="Customisation">
                                <ListBox ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True" materialDesign:RippleAssist.IsDisabled="True" materialDesign:ListBoxItemAssist.ShowSelection="False" >
                                    <StackPanel>
                                        <Label Content="Splash Screen" FontWeight="Bold" FontSize="15" Foreground="{DynamicResource Text}"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                            <Button Width="20" Height="20" Background="#460b80" Click="ColorChanged" Tag="_SplashColor1" x:Name="SSC1">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" BorderBrush="{DynamicResource SecondaryText}" BorderThickness="0.75" CornerRadius="5">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                            <Label Content="Splash Screen Color 1" Foreground="{DynamicResource Text}"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                            <Button Width="20" Height="20" Background="#570057" Click="ColorChanged" Tag="SplashColor2" x:Name="SSC2">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" BorderBrush="{DynamicResource SecondaryText}" BorderThickness="0.75" CornerRadius="5">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                            <Label Content="Splash Screen Color 2" Foreground="{DynamicResource Text}"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <StackPanel>
                                        <Label Content="Window" FontWeight="Bold" FontSize="15" Foreground="{DynamicResource Text}"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                            <Button Width="20" Height="20" Background="{DynamicResource PrimaryColor}" Click="ColorChanged" Tag="PrimaryColor" x:Name="PrimaryColor">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" BorderBrush="{DynamicResource SecondaryText}" BorderThickness="0.75" CornerRadius="5">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                            <Label Content="Primary Color (Background)" Foreground="{DynamicResource Text}"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                            <Button Width="20" Height="20" Background="{DynamicResource SecondaryColor}" Click="ColorChanged" Tag="SecondaryColor" x:Name="SecondaryColor">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" BorderBrush="{DynamicResource SecondaryText}" BorderThickness="0.75" CornerRadius="5">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                            <Label Content="Secondary Color (Background)" Foreground="{DynamicResource Text}"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                            <Button Width="20" Height="20" Background="{DynamicResource TertiaryColor}" Click="ColorChanged" Tag="TertiaryColor" x:Name="TertiaryColor">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" BorderBrush="{DynamicResource SecondaryText}" BorderThickness="0.75" CornerRadius="5">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                            <Label Content="Tertiary Color (Background)" Foreground="{DynamicResource Text}"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <StackPanel>
                                        <Label Content="Text" FontWeight="Bold" FontSize="15" Foreground="{DynamicResource Text}"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                            <Button Width="20" Height="20" Background="#FFFFFFFF" Click="ColorChanged" Tag="Text" x:Name="Text">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" BorderBrush="{DynamicResource SecondaryText}" BorderThickness="0.75" CornerRadius="5">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                            <Label Content="Text (Normal)" Foreground="{DynamicResource Text}"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                            <Button Width="20" Height="20" Background="#FFFFFFFF" Click="ColorChanged" Tag="SecondaryText" x:Name="SecondaryText">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" BorderBrush="{DynamicResource SecondaryText}" BorderThickness="0.75" CornerRadius="5">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                            <Label Content="Text (Secondary)" Foreground="{DynamicResource Text}"/>

                                        </StackPanel>
                                        <StackPanel>
                                            <Button Foreground="{DynamicResource Text}" Content="Reset to Default Scheme" ToolTip="Reset Theme" Margin="0,6,0,0" FontSize="12" VerticalAlignment="Top" HorizontalAlignment="Stretch" Background="#FF141414" Padding="5" BorderBrush="#00744CE0" Click="ResetTheme_Click" Height="32" materialDesign:RippleAssist.IsDisabled="False"/>
                                        </StackPanel>
                                    </StackPanel>
                                </ListBox>
                            </TabItem>
                            <TabItem Header="Credits"></TabItem>
                        </TabControl>
                    </Grid>

                    <!-- // MAIN CONTENT GRID // -->
                    <Grid Grid.Column="1" x:Name="Section_Editor" Visibility="Visible">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140" x:Name="ScriptListDimensions"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <Border BorderBrush="{DynamicResource SecondaryText}" BorderThickness="0 0 0.1 0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="40" />
                                        <RowDefinition Height="30" />
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0">
                                        <Border BorderBrush="{DynamicResource SecondaryText}" BorderThickness="0 0 0 0.1">
                                            <Grid>
                                                <Grid>
                                                    <Label Content="root/scripts" VerticalAlignment="Center" FontWeight="Bold" x:Name="ScriptDirLabel" Foreground="{DynamicResource Text}"/>
                                                    <Button HorizontalAlignment="Right" Background="Transparent" Foreground="{DynamicResource Text}" Content=". . ." BorderThickness="0" VerticalAlignment="Stretch" Click="ChangeScriptListFolder" VerticalContentAlignment="Center" materialDesign:ButtonAssist.CornerRadius="0" Height="40"/>
                                                </Grid>
                                            </Grid>
                                        </Border>
                                    </Grid>
                                    <TextBox Grid.Row="1" Foreground="{DynamicResource Text}" TextChanged="ScriptSearch_TextChanged" x:Name="ScriptSearchBox" />
                                    <Grid Grid.Row="2" ScrollViewer.CanContentScroll="True">
                                        <ListBox x:Name="NormalStandaloneScriptsHolder" Loaded="NormalStandaloneScriptsHolder_Loaded" SelectionChanged="NormalStandaloneScriptsHolder_SelectionChanged" d:ItemsSource="{d:SampleData ItemCount=5}" ScrollViewer.VerticalScrollBarVisibility="Hidden">
                                            <ListBox.ItemContainerStyle>
                                                <Style TargetType="ListBoxItem" BasedOn="{StaticResource {x:Type ListBoxItem}}">
                                                    <Setter Property="TextBlock.TextTrimming" Value="WordEllipsis"/>
                                                    <Setter Property="TextBlock.Height" Value="32"/>
                                                    <Setter Property="Foreground" Value="{DynamicResource Text}"/>
                                                </Style>
                                            </ListBox.ItemContainerStyle>
                                        </ListBox>
                                    </Grid>
                                </Grid>
                            </Border>
                        </Grid>

                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="300*"/>
                                <RowDefinition Height="100*" x:Name="LInjectorConsoleDimensions"/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Border BorderBrush="{DynamicResource SecondaryText}" BorderThickness="0 0 0 0.1" Background="Transparent">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="30"/>
                                        </Grid.RowDefinitions>
                                        <controls:TabSystem Grid.Row="0" x:Name="TabSystem_" IsEnabled="False" Background="Transparent" Visibility="Collapsed" Loaded="TabSystem__Loaded"/>
                                        <Grid Grid.Row="1" Background="Transparent" VerticalAlignment="Bottom">
                                            <Grid VerticalAlignment="Stretch">
                                                <Grid.Resources>
                                                    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}">
                                                        <Setter Property="Margin" Value="0 5"/>
                                                        <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
                                                        <Setter Property="FontSize" Value="9"/>
                                                        <Setter Property="Padding" Value="5"/>
                                                        <Setter Property="Height" Value="50"/>
                                                        <Setter Property="Width" Value="Auto"/>
                                                        <Setter Property="Foreground" Value="{DynamicResource Text}"/>
                                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                                        <Setter Property="Background" Value="Transparent"/>
                                                        <Setter Property="Opacity" Value="1"/>
                                                        <Setter Property="BorderThickness" Value="0"/>
                                                        <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="0"/>
                                                        <EventSetter Event="Click" Handler="NavigationGridClick"/>
                                                    </Style>
                                                </Grid.Resources>

                                                <Grid>
                                                    <Grid HorizontalAlignment="Right" VerticalAlignment="Stretch">
                                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Stretch">
                                                            <Button Foreground="{DynamicResource Text}" HorizontalAlignment="Right" x:Name="OpenFileButton"  Click="EditorButtonClick">
                                                                <Button.Content>
                                                                    <StackPanel Orientation="Horizontal">
                                                                        <Label Content="&#xE8E5;" Foreground="{DynamicResource Text}" FontFamily="Segoe Fluent Icons" FontSize="16"/>
                                                                    </StackPanel>
                                                                </Button.Content>
                                                            </Button>
                                                            <Button Foreground="{DynamicResource Text}" HorizontalAlignment="Right" x:Name="SaveFileButton" Click="EditorButtonClick">
                                                                <Button.Content>
                                                                    <StackPanel Orientation="Horizontal">
                                                                        <Label Content="&#xE792;" Foreground="{DynamicResource Text}" FontFamily="Segoe Fluent Icons" FontSize="16"/>
                                                                    </StackPanel>
                                                                </Button.Content>
                                                            </Button>
                                                            <Button Foreground="{DynamicResource Text}" HorizontalAlignment="Right" Visibility="Collapsed">
                                                                <Button.Content>
                                                                    <StackPanel Orientation="Horizontal">
                                                                        <Label FontFamily="Segoe Fluent Icons" Content="&#xE75C;" FontSize="13"/>
                                                                    </StackPanel>
                                                                </Button.Content>
                                                            </Button>
                                                        </StackPanel>
                                                    </Grid>

                                                    <Grid HorizontalAlignment="Left" VerticalAlignment="Stretch">
                                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Stretch">
                                                            <Button Foreground="{DynamicResource Text}" HorizontalAlignment="Right" x:Name="ExecuteButtonMain" Click="EditorButtonClick">
                                                                <Button.Content>
                                                                    <StackPanel Orientation="Horizontal">
                                                                        <Label FontFamily="Segoe Fluent Icons" Content="&#xF5B0;" FontSize="12" Foreground="{DynamicResource Text}"/>
                                                                    </StackPanel>
                                                                </Button.Content>
                                                            </Button>
                                                        </StackPanel>
                                                    </Grid>
                                                </Grid>
                                            </Grid>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </Grid>
                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0" VerticalAlignment="Top">
                                    <Grid>
                                        <StackPanel Orientation="Vertical" HorizontalAlignment="Left"  VerticalAlignment="Center">
                                            <Label Content="Output" FontSize="10" VerticalAlignment="Bottom" Foreground="{DynamicResource SecondaryText}" HorizontalAlignment="Center"/>
                                            <Rectangle Width="45" Height="1" Fill="{DynamicResource SecondaryText}" HorizontalAlignment="Center" Margin="0 -3 0 0"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                                <Grid Grid.Row="1" VerticalAlignment="Top" Margin="0 -10 0 0" Panel.ZIndex="3">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" x:Name="OutputHolder">
                                        <TextBox x:Name="OutputLogs" VerticalAlignment="Stretch" VerticalContentAlignment="Stretch" Margin="3 0 0 0" BorderThickness="0" IsReadOnly="True" Text="Welcome to LInjector!" TextAlignment="Left" Foreground="{DynamicResource SecondaryText}" FontSize="10" FontFamily="Consolas" materialDesign:TextFieldAssist.DecorationVisibility="Hidden" materialDesign:TextFieldAssist.TextBoxIsMultiLine="True" TextWrapping="Wrap" AcceptsReturn="True" ScrollViewer.CanContentScroll="True" />
                                    </ScrollViewer>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Grid>

                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
     